{
    "compilerOptions": {
        "target": "ES2022",
        "module": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true,
        "moduleResolution": "nodenext"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}